



sce = readRDS("/mnt/gluster_server/data/raw/TCGA_data/00.data/01.TCGA-READ/sce_raw_snv_cnv.rds")


library(SingleCellExperiment)
library(scran)
library(scuttle)

clust <- quickCluster(sce)
sce <- computeSumFactors(sce, cluster=clust, min.mean=0.1)
sce <- logNormCounts(sce)

dec.sce <- modelGeneVar(sce)

hvgs = getTopHVGs(dec.sce, n=df.setting$hvg.num)


meta = colData(sce)
